<?xml version="1.0" encoding="utf-8"?>
<PopChart xmlns:mx="http://www.adobe.com/2006/mxml" xmlns="ns.flex.popup.*" width="680"
		  height="400">
	<mx:Script>
		<![CDATA[
			import mx.charts.series.ColumnSeries;
			import ns.flex.util.LabelUtil;
			[Bindable]
			public var categoryField:String;
			public var seriesInfos:Array;
			
			private function initSeries():void
			{
				for each (var s:Object in seriesInfos)
				{
					var cs:ColumnSeries=new ColumnSeries()
					cs.xField=s.xField;
					cs.yField=s.yField;
					cs.displayName=s.displayName;
					cs.labelFunction=LabelUtil.getColumnSeriesLabel;
					cs.setStyle('labelPosition', 'inside');
					columnChart.series.push(cs);
				}
			}
		]]>
	</mx:Script>
	<mx:HBox horizontalAlign="center" width="100%" height="100%">
		<mx:ColumnChart id="columnChart" dataProvider="{chartData}" showDataTips="true"
						height="100%" width="100%" preinitialize="initSeries()">
			<mx:horizontalAxis>
				<mx:CategoryAxis id="columnAxis" dataProvider="{chartData}"
								 categoryField="{categoryField}"/>
			</mx:horizontalAxis>
		</mx:ColumnChart>
		<LegendBox chart="{columnChart}" name="{title}"/>
	</mx:HBox>
</PopChart>
