<?xml version="1.0" encoding="utf-8"?>
<PopWindow xmlns="ns.flex.controls.*" xmlns:mx="http://www.adobe.com/2006/mxml"
		   title="{bindTitle}">
	<mx:Script>
		<![CDATA[
			import com.amcharts.chartClasses.AmChart;
			[Bindable]
			public var chartData:*;
			//如果window未初始化，直接赋值给title可能报错，尤其是使用PopUpMenuButton时
			//有些问题是因为基于事件产生的
			[Bindable]
			public var bindTitle:String;

			protected function removeLink(chart:AmChart):void
			{
				chart.getChildAt(chart.numChildren - 1).visible=false
			}
		]]>
	</mx:Script>
</PopWindow>
