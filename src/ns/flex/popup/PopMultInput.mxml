<?xml version="1.0" encoding="utf-8"?>
<PopWindow xmlns="ns.flex.controls.*" xmlns:mx="http://www.adobe.com/2006/mxml"
		   title="批量新增" height="300">
	<mx:Metadata>
		[Event(name="confirm")]
	</mx:Metadata>
	<mx:Script>
		<![CDATA[
			[Bindable]
			public var headerTexts:String;

			private const info:String='按上面顺序输入多行记录，用逗号或制表符分隔各列(可以从Excel复制粘贴)。';
		]]>
	</mx:Script>
	<mx:Label text="{headerTexts}" fontWeight="bold" width="{tta.width}"/>
	<mx:TextArea id="tta" width="320" height="100%" toolTip="{info}"/>
	<mx:ControlBar horizontalAlign="right">
		<mx:Button label="确认" click="dispatchEvent(new Event('confirm'))"/>
		<mx:Button label="清空" click="tta.text=''"/>
		<mx:Button label="取消" click="this.close()"/>
	</mx:ControlBar>
</PopWindow>
